{
    "dataRoles": [
        {
            "displayName": "Category Data",
            "name": "category",
            "kind": "Grouping"
        },
        {
            "displayName": "Measure Data",
            "name": "measure",
            "kind": "Measure"
        }
    ],
    "dataViewMappings": [
        {
            "conditions": [
                {
                    "category": {
                        "max": 1
                    },
                    "measure": {
                        "max": 1
                    }
                }
            ],
            "categorical": {
                "categories": {
                    "for": {
                        "in": "category"
                    }
                },
                "values": {
                    "select": [
                        {
                            "bind": {
                                "to": "measure"
                            }
                        }
                    ]
                }
            }
        }
    ],
    "objects": {
        "enableAxis": {
            "properties": {
                "show": {
                    "type": {
                        "bool": true
                    }
                },
                "fill": {
                    "type": {
                        "fill": {
                            "solid": {
                                "color": true
                            }
                        }
                    }
                }
            }
        },
        "generalView": {
            "displayName": "General View",
            "properties": {
              "opacity": {
                "displayName": "Bars Opacity",
                "type": {
                  "integer": true
                }
              },
              "showHelpLink": {
                "displayName": "Show Help Button",
                "type": {
                  "bool": true
                }
              }
            }
          },
        "timeOfDay": {
            "properties": {
                "chosenTime": {
                    "type": {
                        "enumeration": [
                            {
                                "value": "Day",
                                "displayName": "Day"
                            },
                            {
                                "value": "Night",
                                "displayName": "Night"
                            },
                            {
                                "value": "Snowy",
                                "displayName": "Snowy"
                            }
                        ]
                    }
                }
            }
        }
    },    
    "tooltips": {
        "supportedTypes": {
            "default": true
        },
        "roles": [
            "Tooltips"
        ]
    },
    "supportsLandingPage": false,
    "drilldown": {
        "roles": [
            "category"
        ]
    },
    "privileges": []
}